datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
  default  = true
}

generator photon {
  provider = "photonjs"
}

model User {
  id         String      @default(cuid()) @id
  email      String      @unique
  password   String
  name       String
  trumpPacks TrumpPack[]
  gameHands  GameHand[]
}

model Game {
  id    String     @default(cuid()) @id
  pack  TrumpPack
  piles GamePile[]
  hands GameHand[]
}

model GamePile {
  id    String      @default(cuid()) @id
  game  Game
  cards TrumpCard[]
  name  String
}

model GameHand {
  id     String         @default(cuid()) @id
  game   Game
  player User
  score  Int
  piles  GameHandPile[]
  atTurn Boolean
}

model GameHandPile {
  id    String      @default(cuid()) @id
  hand  GameHand
  cards TrumpCard[]
  name  String
}

model TrumpPack {
  id          String           @default(cuid()) @id
  name        String
  author      User
  description String
  cards       TrumpCard[]
  attributes  TrumpAttribute[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model TrumpCard {
  id              String                @default(cuid()) @id
  name            String
  pack            TrumpPack
  description     String?
  attributeValues TrumpAttributeValue[]
  imageUrl        String?
  piles           GamePile[]
  handPiles       GameHandPile[]
}

model TrumpAttribute {
  id      String    @default(cuid()) @id
  pack    TrumpPack
  name    String
  aimHigh Boolean   @default(true)
}

model TrumpAttributeValue {
  id        String         @default(cuid()) @id
  card      TrumpCard
  attribute TrumpAttribute
  value     Float
}
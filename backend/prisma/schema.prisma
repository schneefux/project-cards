datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
  default  = true
}

generator photon {
  provider = "photonjs"
}

model User {
  id               String      @default(cuid()) @id
  email            String      @unique
  password         String
  name             String
  trumpPacks       TrumpPack[]
  trumpGames       TrumpGame[] @relation(name: "UserTrumpGame")
  trumpGamesAtTurn TrumpGame[] @relation(name: "UserTrumpGameAtTurn")
}

model TrumpGame {
  id           String    @default(cuid()) @id
  players      User[]    @relation(name: "UserTrumpGame")
  pack         TrumpPack
  playerAtTurn User?     @relation(name: "UserTrumpGameAtTurn")
}

model TrumpPack {
  id          String           @default(cuid()) @id
  name        String
  author      User
  description String
  cards       TrumpCard[]
  attributes  TrumpAttribute[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model TrumpCard {
  id              String                @default(cuid()) @id
  name            String
  pack            TrumpPack
  description     String?
  attributeValues TrumpAttributeValue[]
  imageUrl        String?
}

model TrumpAttribute {
  id      String    @default(cuid()) @id
  pack    TrumpPack
  name    String
  aimHigh Boolean   @default(true)
}

model TrumpAttributeValue {
  id        String         @default(cuid()) @id
  card      TrumpCard
  attribute TrumpAttribute
  value     Float
}